<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mWhiteEditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>

    <style name="mWhiteTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>

    <style name="mGrayTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>

    <style name="mGrayEditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:color">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:backgroundTint">@color/colorGrayText</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="mDefaultButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/round_btn_linear</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>


</resources>
